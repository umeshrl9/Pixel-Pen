<%- include("partials/header.ejs") %>

<div class="mainBody py-5">
<div class="container">
    <h2>Edit Blog</h2>
    <form action="/edit/<%= blog.id %>" method="POST">
        <!-- Blog Title -->
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= blog.title %>" required>
        </div>

        <!-- Blog Content -->
        <div class="form-group mb-3">
            <label for="content">Content</label>
            <textarea id="content" name="content" class="form-control" rows="8" required><%= blog.content %></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/main" class="btn btn-danger">Cancel</a>
    </form>
    
</div>
</div>

<%- include("partials/footer.ejs") %>
